@model EmployeeManagment.Models.EmployeeViewModels.EmployeePositionForCreationDto

@{
    ViewData["Title"] = "CreateEmployeePosition";
}

<h1>CreateEmployeePosition</h1>

<h4>EmployeePositionForCreationDto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateEmployeePosition">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="PositionId" class="control-label"></label>
                <select asp-for="PositionId" class="form-control">
                    @foreach(var item in Model.Positions)
                    {
                        <option value="@item.Id">@item.Name</option>

                    }
                    </select>
                    <span asp-validation-for="PositionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
